    -- Modules included in this executable, other than Main.
    other-modules:
        Common
        Elab
        Errors
        Eval
        Global
        Lang
        MonadFD4
        PPrint
        Parse
        Subst
        TypeChecker
        Helper
        CEK
        Bytecompile
        Profile
        Bytecompile8
